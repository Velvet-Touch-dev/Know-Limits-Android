{
  "rules": {
    "users": {
      "$uid": {
        "tasks": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          ".indexOn": ["order"]
        },
        "role": {
          ".read": "auth != null"
        }
      }
    },
    "shared_task_lists": {
      "$pairingId": {
        "tasks": {
          ".read": "auth != null && $pairingId.contains(auth.uid)",
          ".write": "auth != null && $pairingId.contains(auth.uid)", 
          ".indexOn": ["order"],
          "$taskId": {
            ".validate": "newData.hasChildren(['id', 'title', 'createdByUid', 'order']) && newData.child('id').isString() && newData.child('title').isString() && newData.child('createdByUid').isString() && newData.child('order').isNumber()"
          }
        }
      }
    }
  }
}
