<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Pitch Black theme - pure black background with gray accents -->
    <style name="Theme.RandomSceneApp.PitchBlack" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color - subtle gray -->
        <item name="colorPrimary">#E0E0E0</item> 
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">#121212</item>
        <item name="colorOnPrimaryContainer">#E0E0E0</item>
        
        <!-- Secondary brand color - darker gray -->
        <item name="colorSecondary">#757575</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryContainer">#1E1E1E</item>
        <item name="colorOnSecondaryContainer">#BDBDBD</item>
        
        <!-- Tertiary brand color - darker accent -->
        <item name="colorTertiary">#616161</item>
        <item name="colorOnTertiary">#000000</item>
        <item name="colorTertiaryContainer">#121212</item>
        <item name="colorOnTertiaryContainer">#9E9E9E</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">#000000</item>
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#EEEEEE</item>
        <item name="colorSurfaceVariant">#121212</item>
        <item name="colorOnSurfaceVariant">#9E9E9E</item>
        <item name="colorOnBackground">#EEEEEE</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">#757575</item>
        <item name="colorOutlineVariant">#424242</item>
        
        <!-- Error color -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>
        <item name="colorErrorContainer">#1F1F1F</item>
        <item name="colorOnErrorContainer">#CF6679</item>
        
        <!-- Switch colors - Fix for toggle visibility -->
        <item name="colorSwitchThumbNormal">#9E9E9E</item>
        <item name="android:colorForeground">#424242</item> <!-- Original Track color for OFF state, now handled by selector -->
        <item name="colorControlActivated">#757575</item> <!-- Original Track and Thumb color for ON state, now handled by selector -->

        <!-- Custom Switch style for Pitch Black theme -->
        <item name="switchStyle">@style/Widget.App.Switch.PitchBlack</item>
        
        <!-- Card customization -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.PitchBlack</item>
    </style>

    <!-- Switch style for Pitch Black theme -->
    <style name="Widget.App.Switch.PitchBlack" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:trackTint">@color/switch_track_tint_pitch_black</item>
        <!-- You can also add thumbTint here if needed:
        <item name="thumbTint">@color/your_thumb_tint_selector</item> -->
    </style>
    
    <!-- Card style for Pitch Black theme -->
    <style name="Widget.App.CardView.PitchBlack" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">#242424</item> 
    </style>
</resources>
