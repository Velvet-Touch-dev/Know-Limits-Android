<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.Material3.Corner.Full" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom Filter Chip Style -->
    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <!-- Optional: Adjust corner radius if needed -->
        <!-- <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Chip</item> -->
    </style>
    <!-- Custom Welcome Button Styles -->
    <style name="Widget.App.Button.Welcome.Primary" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button.Rounded</item>
    </style>

    <style name="Widget.App.Button.Welcome.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:alpha">0.7</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearance.App.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Optional: Define ShapeAppearance.App.Chip if you want custom corners -->
    <!--
    <style name="ShapeAppearance.App.Chip" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    -->
</resources>
